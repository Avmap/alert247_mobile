<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:AlertApp.Converters;assembly=AlertApp"
             x:Class="AlertApp.Views.LanguageView">
    <ContentView.Resources>
        <ResourceDictionary>
            <converters:SelectedLanguageColorConverter x:Key="SelectedLanguageColorConverter" />
        </ResourceDictionary>
    </ContentView.Resources>
    <ContentView.Content>
        <StackLayout Orientation="Horizontal" Spacing="10">
            <Image Margin="16,8,0,8" WidthRequest="40" HorizontalOptions="Center" VerticalOptions="Center" Source="{Binding Flag}"/>
            <Label Text="{Binding Name}" TextColor="{Binding Language.Selected,Converter={StaticResource SelectedLanguageColorConverter}}"  FontSize="20" LineBreakMode="WordWrap" VerticalTextAlignment="Center" Style="{StaticResource Regular}"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>