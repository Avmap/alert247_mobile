                            <DatePicker x:Name="datePicker" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand"></DatePicker>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                            <Label Text="Radius from" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" VerticalTextAlignment="Start" Style="{StaticResource Headline6}"></Label>
                            <ListView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" SeparatorVisibility="None" ItemSelected="ListView_ItemSelected" ItemsSource="{Binding RadiusFromSettingsList}" CachingStrategy="RecycleElement" RowHeight="-1" HasUnevenRows="True" BackgroundColor="White">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>
                                            <StackLayout Margin="8,8,0,8" Orientation="Horizontal" Spacing="16" MinimumHeightRequest="56" >
                                                <Image Source="{Binding CheckedImageSource}"></Image>
                                                <Label Text="{Binding Name,Mode=TwoWay}" VerticalTextAlignment="Center" LineBreakMode="WordWrap" FontFamily="{StaticResource Regular}"/>
                                            </StackLayout>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackLayout>-->
                      
                    </StackLayout>
                </StackLayout>
            </ContentView>
            <!--Pop up-->
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>