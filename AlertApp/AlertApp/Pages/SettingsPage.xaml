<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="false"
             xmlns:infrastructure="clr-namespace:AlertApp.Infrastructure;assembly=AlertApp"
             Navigation="{Binding NavigationService}" 
             x:Class="AlertApp.Pages.SettingsPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TableView Grid.Row="0" Intent="Settings">
                <TableRoot>
                    <TableSection x:Name="table" Title="{infrastructure:Translate Application}">
                        <SwitchCell x:Name="guardianSwitch" OnChanged="SwitchCell_OnChanged" Text="{infrastructure:Translate AllwaysOn}" />
                    </TableSection>
                </TableRoot>
            </TableView>
        </Grid>
    </ContentPage.Content>
</ContentPage>