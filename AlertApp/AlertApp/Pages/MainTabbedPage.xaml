<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
             android:TabbedPage.ToolbarPlacement="Bottom"
               
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:alertapp="clr-namespace:AlertApp.Pages;assembly=AlertApp"
            xmlns:infrastructure="clr-namespace:AlertApp.Infrastructure;assembly=AlertApp"
            Title="{infrastructure:Translate AppName}"
            x:Class="AlertApp.Pages.MainTabbedPage">

    <alertapp:MainPage Title="{infrastructure:Translate HomeTab}" Icon="baseline_home_black_24"/>
    <ContentPage Title="{infrastructure:Translate InfoTab}" Icon="outline_info_black_24"/>
    <alertapp:SettingsPage Title="{infrastructure:Translate SettingsTab}" Icon="outline_settings_black_24"/>
</TabbedPage>